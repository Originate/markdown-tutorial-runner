{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "tsconfig.json", "package.json", "yarn.lock"],
      "outputs": ["dist/**"]
    },
    "doc": {
      "dependsOn": ["build"],
      "inputs": ["**/*.md", "text-run.yml"]
    },
    "fix": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build", "^test", "doc", "unit"],
      "outputs": [],
      "inputs": ["src/**/*.ts"]
    },
    "unit": {
      "dependsOn": [],
      "inputs": ["src/**/*.ts", ".mocharc.yml"],
      "outputs": []
    }
  }
}
