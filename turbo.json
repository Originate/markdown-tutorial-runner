{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "tsconfig.json", "package.json", "yarn.lock"],
      "outputs": ["dist/**"],
      "outputMode": "new-only"
    },
    "clean": {
      "outputs": []
    },
    "doc": {
      "dependsOn": ["build"],
      "inputs": ["**/*.md", "text-run.yml"],
      "outputMode": "new-only"
    },
    "fix": {
      "outputs": [],
      "outputMode": "new-only"
    },
    "lint": {
      "outputs": [],
      "outputMode": "new-only"
    },
    "test": {
      "dependsOn": ["build", "^test", "doc", "unit"],
      "outputs": [],
      "inputs": ["src/**/*.ts"],
      "outputMode": "new-only"
    },
    "unit": {
      "dependsOn": [],
      "inputs": ["src/**/*.ts", ".mocharc.yml"],
      "outputs": [],
      "outputMode": "new-only"
    }
  },
  "globalDependencies": ["tsconfig.json", "yarn.lock"]
}
