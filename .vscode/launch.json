{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "unit",
      "program": "${workspaceRoot}/node_modules/mocha/bin/mocha",
      "args": ["src/**/*.test.ts"],
      "outFiles": ["${workspaceRoot}/src/*.test.ts"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "run text-runner",
      "program": "${workspaceFolder}/src/cli.ts",
      "outFiles": ["${workspaceFolder}/dist/**"]
    },
    {
      "name": "cuke current file",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/cucumber-js",
      "args": ["features/exec/global-command.feature"],
      "cwd": "${workspaceFolder}/textrun-shell",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "windows": {
        "program": "${workspaceFolder}/node_modules/cucumber/bin/cucumber"
      }
    }
  ]
}
